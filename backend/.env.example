# Server Configuration
PORT=4000
NODE_ENV=development

# Sensay API Configuration (Legacy)
# SENSAY_API_KEY should be stored securely and not checked into source control
SENSAY_API_KEY=
SENSAY_BASE_URL=
SENSAY_ORGANIZATION_SECRET=
SENSAY_OWNER_ID=
SENSAY_FALLBACK_ENABLED=false

# Supavec API Configuration
# SUPAVEC_API_KEY should be stored securely and not checked into source control
SUPAVEC_API_KEY=
SUPAVEC_BASE_URL=https://api.supavec.com
SUPAVEC_TIMEOUT=30000

# Migration Configuration
MIGRATION_MODE=SUPAVEC_ONLY
USE_SUPAVEC_FOR_NEW_REPLICAS=true
USE_SUPAVEC_FOR_CHAT=true
ENABLE_SENSAY_FALLBACK=false
NAMESPACE_STRATEGY=USER_ID

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/memorylane
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-characters
JWT_EXPIRES_IN=7d

# Admin Configuration
ADMIN_EMAILS=admin@sensay.ai,superadmin@sensay.ai

# Email Configuration (using Resend API)
EMAIL_FROM=noreply@sensay.ai
RESEND_API_KEY=your-resend-api-key
FEEDBACK_TO=feedback@sensay.ai

# Frontend URL(s) (for CORS and email links)
# You can provide a single URL via FRONTEND_URL or multiple comma-separated URLs via FRONTEND_URLS.
# Example single: FRONTEND_URL=http://localhost:5173
# Example multiple: FRONTEND_URLS=http://localhost:5173,https://memory-lane-iota.vercel.app,https://memory-lane-d5l0.onrender.com
FRONTEND_URL=http://localhost:5173
FRONTEND_URLS=

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOGIN_WINDOW_MS=900000

# Optional secret to allow runtime registration of exposed frontend origins (use when running dev server with --host)
# Keep this secret and provide it as the X-Origin-Secret header when calling /internal/register-origin
ORIGIN_REGISTRATION_SECRET=

# Logging
LOG_LEVEL=info

# Logging
LOG_LEVEL=info