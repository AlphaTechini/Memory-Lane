# =============================================================
# Memory Lane Backend — Environment Variables
# =============================================================

# --- Server ---
PORT=4001
NODE_ENV=development

# --- MongoDB ---
MONGODB_URL=mongodb://localhost:27017/sensay
DATABASE_URL=mongodb://localhost:27017/sensay

# --- JWT ---
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-characters-long
JWT_EXPIRES_IN=7d

# --- Migration / API Routing ---
MIGRATION_MODE=SUPAVEC_ONLY
USE_SUPAVEC_FOR_NEW_REPLICAS=true
USE_SUPAVEC_FOR_CHAT=true
ENABLE_SENSAY_FALLBACK=false
NAMESPACE_STRATEGY=USER_ID

# --- Frontend URL(s) (comma-separated, for CORS) ---
FRONTEND_URL=http://localhost:5173

# --- Logging ---
LOG_LEVEL=info

# --- Sensay API (Legacy) ---
SENSAY_API_KEY=
SENSAY_BASE_URL=https://api.sensay.io
SENSAY_ORGANIZATION_SECRET=
SENSAY_OWNER_ID=
SENSAY_FALLBACK_ENABLED=false

# --- Supavec API (Legacy — being replaced by RAG Engine) ---
SUPAVEC_API_KEY=
SUPAVEC_BASE_URL=https://api.supavec.com
SUPAVEC_TIMEOUT=30000

# --- RAG Engine (Go microservice) ---
RAG_ENGINE_URL=http://localhost:8081

# --- Groq LLM (optional — enables AI orchestration) ---
# GROQ_API_KEY=gsk_xxxxxxxxxxxxx
# GROQ_MODEL=meta-llama/llama-4-scout-17b-16e-instruct

# --- AWS / DynamoDB (optional — Go RAG falls back to MongoDB) ---
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# DYNAMODB_ENDPOINT=http://localhost:8000

# --- Cloudinary (image uploads) ---
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# --- Admin ---
ADMIN_EMAILS=admin@sensay.ai

# --- Email (Resend API) ---
EMAIL_FROM=noreply@example.com
RESEND_API_KEY=

# --- Security ---
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOGIN_WINDOW_MS=900000

# --- CORS Runtime Registration ---
ORIGIN_REGISTRATION_SECRET=

# --- Firebase Admin SDK ---
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account",...}