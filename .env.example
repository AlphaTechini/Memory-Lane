# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/sensay-ai

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-characters
JWT_EXPIRES_IN=7d

# Admin Configuration
ADMIN_EMAILS=admin@sensay.ai,superadmin@sensay.ai

# Email Configuration (for future email verification)
EMAIL_FROM=noreply@sensay.ai
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASS=your-app-password

# Frontend URL(s) (for CORS and email links)
# You can provide a single URL via FRONTEND_URL or multiple comma-separated URLs via FRONTEND_URLS.
# Example single: FRONTEND_URL=http://localhost:5173
# Example multiple: FRONTEND_URLS=http://localhost:5173,http://localhost:5174
FRONTEND_URL=http://localhost:5173
FRONTEND_URLS=

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOGIN_WINDOW_MS=900000

# Optional secret to allow runtime registration of exposed frontend origins (use when running dev server with --host)
# Keep this secret and provide it as the X-Origin-Secret header when calling /internal/register-origin
ORIGIN_REGISTRATION_SECRET=

# Logging
LOG_LEVEL=info
